{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "app/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "__tests__"
  ]
}
